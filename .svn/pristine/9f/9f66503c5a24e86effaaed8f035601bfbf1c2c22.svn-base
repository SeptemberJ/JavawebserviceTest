    /**base64解密*/
    public static String decryptBASE64(String key){
    	byte[] bt;
    	try {
    	bt = (new BASE64Decoder()).decodeBuffer(key);
    	return new String(bt, "GB2312");
    	} catch (IOException e) {
    	e.printStackTrace();
    	return "";
    	}
    }
	
	
